{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/layouts/*": ["components/layouts/*"],
			"@/components/*": ["components/*"],
			"@/pages/*": ["pages/*"],
			"@/styles/*": ["styles/*"],
			"@/utils/*": ["utils/*"],
			"@/types/*": ["types/*"],
			"@/app/*": ["app/*"],
			"@/features/*": ["features/*"],
			"@/services/*": ["services/*"],
			"@/lib/*": ["lib/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/**/*.tsx",
		"**/**/.tsx",
		"types.d.ts",
		"jest.config.js"
	],
	"exclude": ["node_modules"]
}
